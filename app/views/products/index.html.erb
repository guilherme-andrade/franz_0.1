<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Products</h1>
  <div class="row">
  <% @products.each do |product| %>
    <div class="col-4 mb-5 d-flex flex-column h-100">
      <div class="row h-100 justify-content-between align-items-center">
        <div class="col-12">
          <h3><%= product.name %></h3>
        </div>
        <div class="col-12">
          <p><%= product.post[0..200] %>...</p>
        </div>
        <div class="col-12">
          <%= link_to 'Show', product, class: 'd-inline btn btn-primary' %>
          <%= link_to 'Edit', edit_product_path(product), class: 'd-inline btn btn-info' %>
          <%= link_to 'Destroy', product, class: 'd-inline btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>

<%= link_to 'New Product', new_product_path %>
